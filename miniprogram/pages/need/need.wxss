.Title {
  height: 80rpx;
  width: 100%;
  position: fixed;
  background-color: #f70719;
  top: 0rpx;
  z-index: 9999;
  display: flex;
  padding-top: 20rpx
}


.input {
  display: flex;
  border-radius: 10rpx;
  height: 40rpx;
  width: 78%;
  margin: 5rpx 15rpx;
  padding: 13rpx;
  background-color: #f0f0f0;
}
.search {
  height: 64rpx;
  width: 105rpx;
  margin: 5rpx 0rpx;
  text-align: center;
  line-height: 62rpx;
  border-radius: 10rpx;
  color: #ff8c00;
  background-color: #f0f0f0;
  font-size: 30rpx;
}

.hot {
  margin: 10rpx 25rpx;
  color: #515151;
  font-size: 33rpx;
}

.Label {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin: 0rpx 25rpx;
}

.label {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 39rpx;
  text-align: center;
  padding: 0 35rpx;
  margin: 7.5rpx;
  background-color: white;
  border-radius: 50rpx;
  color: #a8a8a8;
  box-shadow: 0 0 7rpx #a8a8a8;
}


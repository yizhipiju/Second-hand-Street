.ShopList {
  width: 97.4%;
  margin: 1.3%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.ShopShopping {
  width: 47%;
  background-color: white;
  margin: 1.5%;
  border-radius: 10rpx;
  /* box-shadow: 0 0 3rpx #E0E0E0; */
  padding-bottom: 10rpx;
}

.ShopImage {
  height: 350rpx;
  width: 100%;
  background-color: #e0e0e0;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.ShopName {
  height: 45rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 10rpx;

}

.ShopPrice {
  margin-top: 10rpx;
  color: rgb(189, 189, 189);
  font-size: 20rpx;
  padding: 0rpx 10rpx;
}

.not {
  height: 120rpx;
  widows: 700rpx;
  margin: 35rpx 25rpx;
  text-align: center;
  line-height: 120rpx;
  border: 1rpx solid black;
  border-radius: 10rpx;
  color: rgb(0, 0, 0);
}

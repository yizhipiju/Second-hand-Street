<view style="margin-top:30rpx;"></view>
<form bindsubmit="formSubmit">
 <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell ">
          <view class="weui-cell__hd">
            <view class="weui-label">电话：</view>
          </view>
          <view class="weui-cell__bd">
            <input name="phone" class="weui-input" value="{{ value }}" type="text" placeholder="输入电话，方便联系您" />
          </view>
        </view>
      </view>

  <view class="weui-btn-area">
    <button class="weui-btn button" form-type='submit' open-type='getUserInfo'>
      <text style="color: white;">保存</text>
    </button>
  </view>

</form>